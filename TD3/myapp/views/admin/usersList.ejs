<table class="table ">
    <thead>
    <tr>
        <th class="text-center" scope="col">ID</th>
        <th class="text-center" scope="col">Nom</th>
        <th class="text-center" scope="col">Pr√©nom</th>
        <th class="text-center" scope="col">Statut du compte</th>
        <th class="text-center" scope="col">Type d'utilisateur</th>
        <th class="text-center" scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(function(user) { %>
        <tr>
            <td class="text-center align-middle"><%= user.id %></td>
            <td class="text-center align-middle"><%= user.nom %></td>
            <td class="text-center align-middle"><%= user.prenom %></td>
            <td class="text-center align-middle">
                <% if (user.active) { %>
                    <span class="badge bg-success">Actif</span>
                <% } else { %>
                    <span class="badge bg-danger">Inactif</span>
                <% } %>

            </td>
            <td class="text-center align-middle">
                <% switch (user.type) {
                case 'Admin':
                %><span class="badge bg-dark"><%= user.type %></span><%
                    break;
                case 'Candidat':
                %><span class="badge btn-info"><%= user.type %></span><%
                    break;
                case 'Recruteur':
                %><span class="badge btn-warning"><%= user.type %></span><%
                    break;
                default:
                %><span class="badge bg-warning"><%= user.type %></span><%
                    break;
                } %>
            </td>
            <td class="text-center">
                <a class="btn btn-primary" href="/users/edit/<%= user.id %>">Modifier</a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>