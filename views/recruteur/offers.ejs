<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
<%- include('../partials/recruteurHeader.ejs', {'activePage': 'offersList'}); %>

<main class="p-5 w-100">
    <h2>Liste des Offres</h2>
    <div class="d-flex justify-content-between w-100">

        <%- include('../partials/searchBar', {'placeholder': 'rechercher parmi les offres', query: locals.query ? query : ''});%>

    </div>
    <div class="d-flex flex-wrap mt-5 gap-5">
        <% fichesPostes.forEach(function(fichePoste) { %>
            <div class="card" style="width: 18rem">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><%= fichePoste.intitule %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= fichePoste.organisation.nom %></h6>
                    </div>
                    <p class="card-text"><%= fichePoste.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/recruteur/offres/<%= fichePoste.id %>" class="btn btn-outline-primary">View offer</a>
                        <span class="text-primary">  <%= fichePoste.fourchetteBasse/1000 + 'k' %>-<%= fichePoste.fourchetteHaute/1000 +'k' %> â‚¬/an </span>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</main>
<!-- Bootstrap 5 JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js"></script>
</body>
</html>
