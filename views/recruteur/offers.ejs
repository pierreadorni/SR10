<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
<%- include('../partials/recruteurHeader.ejs', {'activePage': 'offersList'}); %>

<main class="p-5 w-100">
    <h2>Liste des Offres</h2>
    <div class="d-flex justify-content-between w-100">

        <%- include('../partials/searchBar', {'placeholder': 'rechercher parmi les offres', query: locals.query ? query : ''}); %>

    </div>
    <div class="d-flex flex-wrap mt-5 gap-5">
        <% offres.forEach(function(offre) { %>
            <div class="card" style="width: 18rem">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><%= offre.intitule %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= offre.nomOrganisation %></h6>
                    </div>
                    <p class="card-text"><%= offre.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/recruteur/offre/<%= offre.numeroOffre %>" class="btn btn-primary position-relative">
                            Voir l'offre
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> <%= offre.nbCandidatures %>
                                <span class="visually-hidden">candidatures</span>
                            </span>
                        </a>
                        <span class="text-primary">  <%= offre.fourchetteBasse / 1000 + 'k' %>-<%= offre.fourchetteHaute / 1000 + 'k' %> â‚¬/an </span>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</main>
<!-- Bootstrap 5 JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js"></script>
</body>
</html>
